{
  "extends": "../tsconfig.base.json",
  "include": ["./libraries/**/*", "./src/**/*", "./index.ts"],
  "compilerOptions": {
    "module": "esnext",
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "paths": {
      "#src": ["./index.ts"],
      "#src/*": ["./src/*"]
