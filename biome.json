{
  "$schema": "https://biomejs.dev/schemas/2.3.5/schema.json",
  "assist": {
    "actions": {
      "source": {
        "organizeImports": "on"
      }
    }
  },
  "files": {
    "ignoreUnknown": false,
    "includes": [
      "**/src/**/*",
      "**/bench/**/*",
      "**/data/**/*",
      "**/utils/**/*",
      "**/.vscode/**/*",
      "**/index.html",
      "**/vite.config.ts",
      "**/postcss.config.ts",
      "!**/src/routeTree.gen.ts",
      "!**/bench/results.json"
    ]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space"
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "style": {
        "useConsistentArrayType": {
          "level": "warn",
          "options": {
            "syntax": "generic"
          }
        }
      },
      "suspicious": {
        "noUnknownAtRules": {
          "level": "warn",
          "options": {
            "ignore": ["extend"]
          }
        }
      }
    }
  },
  "overrides": [
    {
      "includes": ["**/components/**/*"],
      "linter": {
        "rules": {
          "style": {
            "useComponentExportOnlyModules": "warn"
          }
        }
      }
    },
    {
      "includes": ["**/src/**/*.stories.*"],
      "linter": {
        "rules": {
          "a11y": {
            "useValidAnchor": "off"
          },
          "style": {
            "useComponentExportOnlyModules": "off"
          }
        }
      }
    }
  ],
  "vcs": {
    "clientKind": "git",
    "enabled": false,
    "useIgnoreFile": false
  }
}
