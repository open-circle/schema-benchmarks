{
  "extends": "../tsconfig.base.json",
  "include": [".storybook/**/*", "./vite.config.ts", "./postcss.config.ts", "./preview.ts", "./src/**/*", "./test/**/*", "./vite/**/*"],
  "compilerOptions": {
    "jsx": "react-jsx",
    "module": "ESNext",
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "types": ["vite/client"],

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": false,
    "noEmit": true,
    "allowArbitraryExtensions": true,
    
    "paths": {
      "@/*": ["./src/*"],
      "@test/*": ["./test/*"]
    }
  }
}
